<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sxwz.refreshapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListViewActivity"
            android:label="@string/listView_with_loadmore"/>
        <activity
            android:name=".RecyclerViewActivity"
            android:label="@string/recyclerview_with_loadmore"/>
        <activity
            android:name=".GridViewAtivity"
            android:label="@string/gridview_with_loadmore"/>
        <activity
            android:name=".SwipeListViewActivity"
            android:label="@string/swipe_listview_with_loadmore"/>
    </application>

</manifest>